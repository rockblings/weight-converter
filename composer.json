{
    "name": "jobadssit/weight-converter",
    "description": "Weight conversion using php",
    "keywords": [
        "jobadssit",
        "weight-converter"
    ],
    "homepage": "https://github.com/jobadssit/weight-converter",
    "license": "MIT",
    "authors": [
        {
            "name": "Godspower Oduose",
            "email": "oduose4eva@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^v3.13.2",
        "pestphp/pest": "^v1.22.3",
        "spatie/ray": "^1.28",
        "vimeo/psalm": "^5.4.0"
    },
    "autoload": {
        "psr-4": {
            "Jobadssist\\WeightConverter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jobadssist\\WeightConverter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
